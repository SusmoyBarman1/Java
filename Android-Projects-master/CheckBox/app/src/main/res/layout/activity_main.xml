<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleText"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <CheckBox
        android:id="@+id/milkCheckBoxId"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/milkText"
        android:textSize="20dp"
        android:textStyle="bold"

        />
    <CheckBox
        android:id="@+id/sugarCheckBoxId"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sugarText"
        android:textSize="20dp"
        android:textStyle="bold"

        />
    <CheckBox
        android:id="@+id/waterCheckBoxId"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waterText"
        android:textSize="20dp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/showButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showButtonText"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/resultTextId"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        />

</LinearLayout>